{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "Response": {
      "type": "object",
      "properties": {
        "loan": {
          "$ref": "#/definitions/Loan"
        }
      },
      "description": "Response for the execution of the decision service operation. Contains notably the output parameters that are returned by the execution.",
      "title": "Response"
    },
    "Loan": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "integer",
          "title": "Amount"
        },
        "duration": {
          "type": "integer",
          "title": "Duration"
        },
        "yearlyInterestRate": {
          "type": "number",
          "title": "Yearly Interest Rate"
        },
        "yearlyRepayment": {
          "type": "integer",
          "title": "Yearly Repayment"
        },
        "approved": {
          "type": "boolean",
          "default": false,
          "title": "Approved"
        },
        "messages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Messages"
        },
        "approvalStatus": {
          "type": "string",
          "title": "Approval Status"
        }
      },
      "title": "Loan"
    },
    "Borrower": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "creditScore": {
          "type": "integer",
          "title": "Credit Score"
        },
        "yearlyIncome": {
          "type": "integer",
          "title": "Yearly Income"
        }
      },
      "title": "Borrower"
    },
    "Request": {
      "type": "object",
      "properties": {
        "borrower": {
          "$ref": "#/definitions/Borrower"
        },
        "loan": {
          "$ref": "#/definitions/Loan"
        }
      },
      "description": "Request for the execution of the decision service operation. Contains notably the input parameters that are used for the execution.",
      "title": "Request"
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "description": "HTTP error code.",
          "title": "Code"
        },
        "message": {
          "type": "string",
          "description": "Error message.",
          "title": "Message"
        },
        "details": {
          "type": "string",
          "description": "Detailed error message.",
          "title": "Details"
        },
        "errorCode": {
          "type": "string",
          "description": "Product error code.",
          "title": "Error Code"
        }
      },
      "description": "Error occurring when invoking the execution of the decision service operation.",
      "title": "Error"
    }
  },
  "type": "object",
  "properties": {
    "__DecisionID__": {
      "type": "string",
      "description": "Unique identifier representing the execution of the decision service operation. If it is not specified, it will be computed automatically.",
      "title": "Decision Id"
    },
    "borrower": {
      "$ref": "#/definitions/Borrower"
    },
    "loan": {
      "$ref": "#/definitions/Loan"
    }
  }
}